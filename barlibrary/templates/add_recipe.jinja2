{% extends "base.jinja2" %}
{% block title %}Add Recipe{% endblock %}

{% block head %}
    {{ super() }}
{% endblock %}

{% block description %}This page is for adding a new recipe{% endblock %}

{% block content %}
<form method="POST" action="{{ request.route_path('add_recipe') }}">
    <label for="recipe">Recipe Name:</label>
    <textarea class="form-control" id="recipe" title="recipe_name" name="recipe_name">{% if recipe_name %}{{ recipe_name }}{% else %}Put recipe name{% endif %}</textarea>

    <label for="ingrdients">Ingredients (separate by commas with amount in brackets and x at end if not needed):</label>
    <textarea class="form-control" id="ingredients" title="ingredients" name="ingredients" rows="3">{% if ingredients %}{{ ingredients }}{% else %}ex: whiskey [1.0 oz], sugar [1 cube], cherry [1] x, bitters [2 dash]{% endif %}</textarea>

    <label for="directions">Directions (separate by semicolon):</label>
    <textarea class="form-control" id="directions" title="directions" name="directions" rows="2">{% if directions %}{{ directions }}{% else %}ex: Muddle sugar; pour whiskey; add cherry{% endif %}</textarea>

    <br>
    <input type="submit" class="btn btn-primary" name="add.submitted" value="Submit" >
</form>
{% if bad_ingredient_input %}
    <body>
        <p>Problem with list of ingredients provided</p>
    </body>
{% elif recipe_exists %}
    <body>
        <p>Recipe already exists</p>
    </body>
{% else %}
    {% if recipe %}
        <body>
            <br><p>Recipe added successfully:</p><br>
            <div class="jumbotron">
                {{ recipe | safe }}
            </div>
        </body>
    {% endif %}
{% endif %}
{% endblock %}
