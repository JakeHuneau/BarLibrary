{% extends "base.jinja2" %}
{% block title %}Change Permissions{% endblock %}

{% block head %}
    {{ super() }}
{% endblock %}

{% block description %}This page is for changing permissions{% endblock %}

{% block content %}
<form method="POST" action="{{ request.route_path('change_permission') }}">
    <label for="user">Username</label>
    <input class="form-control" type="text" id="user"
           name="user"><br/>
    <label for="permission">Permission</label>
    <input class="form-control" type="text" id="permission"
           name="permission"><br/>
    <input type="submit" class="btn btn-primary" name="form.submitted" value="Change Permission"/>
</form>
{% if message %}
<p>{{ message }}</p>
{% endif %}
{% endblock %}
