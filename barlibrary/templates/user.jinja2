{% extends "base.jinja2" %}
{% block title %}User Account{% endblock %}

{% block head %}
    {{ super() }}
{% endblock %}

{% block description %}This is the user account page.{% endblock %}

{% block content %}
<form action="{{ request.route_path('user_page') }}" method="POST">
    <label for="login">Username</label>
    <input type="text" id="login"
           name="login"
           value={% if login is defined %}{{ login }}{% endif %}><br/>
    <label for="password">Password</label>
    <input type="password" id="password"
           name="password"
           value={% if password is defined %}{{ password }}{% endif %}><br/>
    <input type="submit" name="user_form.submitted"
           value="Log In"/>
    <input type="submit" name="logout.submitted"
           value="Log Out"/>
    <input type="submit" name="new_user.submitted" value="Add Account"/>
</form>

{% if message is defined %}
<body>
{{ message }}
</body>
{% endif %}

{% if logged_in %}
<br><a href="{{ request.route_path('kitchen') }}">Kitchen</a>
{% endif %}
{% endblock %}
